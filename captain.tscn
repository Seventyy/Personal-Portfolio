resource_name = "Captain"
script/source = "extends CharacterBody2D

@export var normal_speed:float
@export var slow_speed:float
@export var fast_speed:float

func _process(delta):
	var input_direction:Vector2
	var input_speed:float = normal_speed
	
	if Input.is_key_pressed(KEY_W):
		input_direction += Vector2.UP
	if Input.is_key_pressed(KEY_S):
		input_direction += Vector2.DOWN
	if Input.is_key_pressed(KEY_A):
		input_direction += Vector2.LEFT
	if Input.is_key_pressed(KEY_D):
		input_direction += Vector2.RIGHT
	
	if Input.is_key_pressed(KEY_SHIFT):
		input_speed = fast_speed
	elif Input.is_key_pressed(KEY_CTRL):
		input_speed = slow_speed
	
	velocity = (input_direction).normalized() * input_speed
	move_and_slide()
"

